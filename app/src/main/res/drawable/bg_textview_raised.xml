<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#A0A0A0"/> <corners android:radius="8dp"/> </shape>
    </item>

    <item android:bottom="1dp" android:right="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <corners android:radius="8dp"/>
        </shape>
    </item>

    <item android:top="1dp" android:left="1dp" android:bottom="2dp" android:right="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0"/> <corners android:radius="7dp"/>
        </shape>
    </item>
</layer-list>